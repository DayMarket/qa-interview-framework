        "produces": [
          "application/json"
        ],
        "tags": [
          "orders"
        ],
        "summary": "Get orders",
        "parameters": [
          {
            "type": "string",
            "description": "Filter by clientId",
            "name": "clientId",
            "in": "query"
          },
          {
            "type": "string",
            "description": "Filter by status (Created|Paid|Canceled)",
